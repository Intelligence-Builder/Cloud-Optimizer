# Cloud Optimizer Production Environment Configuration
# Copy this file to .env.production and fill in the values

# Application
APP_NAME=Cloud Optimizer
APP_VERSION=2.0.0
DEBUG=false
LOG_LEVEL=INFO

# Database
DATABASE_NAME=cloud_optimizer
DATABASE_USER=cloud_optimizer
DATABASE_PASSWORD=CHANGE_ME_SECURE_PASSWORD
DATABASE_PORT=5432

# Redis
REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD
REDIS_PORT=6379

# JWT Authentication
# Generate with: openssl rand -hex 32
JWT_SECRET_KEY=CHANGE_ME_GENERATE_WITH_OPENSSL_RAND_HEX_32
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Intelligence-Builder Platform
IB_PLATFORM_URL=http://localhost:8000
IB_API_KEY=
IB_TENANT_ID=default

# AWS Configuration
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_SESSION_TOKEN=

# API Configuration
API_PORT=8000

# Feature Flags
ENABLE_SECURITY_DOMAIN=true
ENABLE_COST_DOMAIN=false
ENABLE_PERFORMANCE_DOMAIN=false
ENABLE_RELIABILITY_DOMAIN=false
ENABLE_OPEX_DOMAIN=false

# Data Paths
COMPLIANCE_DATA_PATH=./data/compliance
