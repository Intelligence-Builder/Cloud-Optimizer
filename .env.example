# Cloud Optimizer Configuration
# Copy this file to .env and fill in your values

# Application Settings
APP_NAME=Cloud Optimizer
DEBUG=false
LOG_LEVEL=INFO

# Intelligence-Builder Platform
IB_PLATFORM_URL=http://localhost:8000
IB_API_KEY=your-api-key-here
IB_TENANT_ID=your-tenant-id

# AWS Configuration
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_DEFAULT_REGION=us-east-1
# AWS_SESSION_TOKEN=  # Optional, for temporary credentials

# API Settings
API_HOST=0.0.0.0
API_PORT=8080
API_RELOAD=false

# Feature Flags (enable domains)
ENABLE_SECURITY_DOMAIN=true
ENABLE_COST_DOMAIN=false
ENABLE_PERFORMANCE_DOMAIN=false
ENABLE_RELIABILITY_DOMAIN=false
ENABLE_OPEX_DOMAIN=false
