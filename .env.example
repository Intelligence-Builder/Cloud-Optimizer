# Cloud-Optimizer V2 Environment Configuration
# Copy this to .env and fill in your values

# =============================================================================
# GitHub Integration (for Smart-Scaffold)
# =============================================================================
# Create a Personal Access Token at: https://github.com/settings/tokens
# Required scopes: repo, project, workflow, write:discussion
GITHUB_TOKEN=your_github_token_here
GITHUB_OWNER=Intelligence-Builder
GITHUB_REPO=Cloud-Optimizer
GITHUB_PROJECT_ID=5

# =============================================================================
# Smart-Scaffold Database (uses shared Smart-Scaffold services)
# =============================================================================
# These point to the running Smart-Scaffold Docker services
DATABASE_URL=postgresql://test_user:test_password@localhost:5433/smart_scaffold
REDIS_URL=redis://localhost:6386/0
MEMGRAPH_HOST=localhost
MEMGRAPH_PORT=7687

# =============================================================================
# Intelligence-Builder Platform
# =============================================================================
# IB Platform API (for SDK integration)
IB_PLATFORM_URL=http://localhost:8000
IB_API_KEY=your_ib_api_key_here
IB_TENANT_ID=cloud-optimizer-v2

# =============================================================================
# Anthropic API (for Security Analysis Explanations)
# =============================================================================
# Claude API key for generating finding explanations
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# =============================================================================
# Application Settings
# =============================================================================
LOG_LEVEL=INFO
DEBUG=false
